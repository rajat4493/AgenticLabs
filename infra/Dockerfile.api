FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# (optional) build deps for psycopg2 etc.
RUN apt-get update && apt-get install -y --no-install-recommends build-essential && rm -rf /var/lib/apt/lists/*

# install minimal server deps (add more as needed)
RUN pip install --no-cache-dir uvicorn[standard] fastapi pydantic-settings redis psycopg2-binary

# copy code
COPY apps/api /app/apps/api
COPY core /app/core
COPY adapters /app/adapters
COPY config /app/config

EXPOSE 8000
# --reload for dev; switch to gunicorn/uvicorn workers for prod
CMD ["uvicorn", "apps.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
